<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">New Collection</h4>
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                <label for="collectionTitle">Title</label>
                {{input type="text" value=collection.title id="collectionTitle" class="form-control"}}
            </div>
            <div class="form-group">
                <label for="collectionDescription">Description</label>
                {{textarea value=collection.description id="collectionDescription" class="form-control"}}
            </div>
            <button class="btn btn-primary" {{action createAction collection}}>Create</button>
        </form>
    </div>
</div>