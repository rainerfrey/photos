<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">Upload</h4>
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                {{upload-preview url=previewUrl}}
            </div>
            <div class="form-group">
                {{file-upload filesChangedAction=(action "filesChanged") uploadEvents=this}}
            </div>
            <div class="form-group">
                <label for="imageTitle">Title</label>
                {{input type="text" value=title id="imageTitle" class="form-control"}}
            </div>
            <div class="form-group">
                <label for="imageCaption">Caption</label>
                {{textarea value=caption id="imageCaption" class="form-control"}}
            </div>
            <button class="btn btn-primary" {{action 'upload'}}>Upload</button>
        </form>
    </div>
</div>