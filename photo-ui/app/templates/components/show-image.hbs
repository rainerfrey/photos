<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">{{#link-to "photo" photo.id}} {{photo.displayName}} {{/link-to}}</h4>
    </div>
    <div class="panel-body">
        <div class="image-display">
            <img src={{photo.scaledUrl}} title={{photo.displayName}} alt={{photo.displayName}}>
        </div>
        <div class="image-footer">
            <div>{{caption}} - by {{photo.owner}}</div>
            <div>
                <a href={{photo.originalUrl}} target="_blank" rel="noopener" title="Show full size">
                    <span class="glyphicon glyphicon-fullscreen"/>
                </a>
                {{photo-owner-actions photo=photo deleteAction=(action deleteAction) reprocessAction=(action reprocessAction)}}
            </div>
        </div>
    </div>
</div>
